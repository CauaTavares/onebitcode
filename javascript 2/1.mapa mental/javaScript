----------------------------------( OPERADORES )------------------------------------------------

¬†							 /* Forma simplificada */
5 + 2 = 7 	/* Mais */				 n = n + 4   n += 4   n++
5 - 2 = 3	/* Menos */				 n = n - 5   n -= 5   n--
5 * 2 = 10	/* Vezes */				 n = n * 4   n *= 4
5 / 2 = 2.5	/* Divis√£o */				 n = n / 2   n /= 2
5 % 2 = 1	/* Resto de divis√£o */			 n = n ** 2  n **= 2
5 ** 2 = 25	/* potencia (elevado ao quadrado) */	 n = n % 5   n %= 5

5 > 2 = true	/* Maior */
7 < 4 = false	/* Menor */
8 >= 8 = true	/* Maior ou igual */
9 <= 7 = false	/* Menor ou igual */
5 == 5 = true	/* Igual */
4 != 4 = false	/* Diferente */

------------------------------------( OPERADORES LOGICOS(&&, ||, !)--------------------------------
COMO LER:

E(AND) = &&
OU(OR) = ||
N√ÉO(NOT) = !

NEGA√á√ÉO !

! TRUE = FALSE (Se for VERDADEIRO retorna FALSO)
! FALSE = TRUE (Se for FALSO retorna VERDADEIRO)


CONJUN√á√ÉO &&

TRUE && TRUE = TRUE	(Basta APENAS UM ser FALSE para RETORNAR FALSE)
TRUE && FALSE = FALSE	(Basta APENAS UM ser FALSE para RETORNAR FALSE)
FALSE && TRUE = FALSE 	(Basta APENAS UM ser FALSE para RETORNAR FALSE)
FALSE && FALSE = FALSE  (S√≥ RETORNA VERDADE se os DOIS forem VERDADE)

DISJUN√á√ÉO ||

TRUE || TRUE = TRUE    (Basta APENAS UM ser VERDADEIRO para RETORNAR VERDADEIRO)
TRUE || FALSE = TRUE   (Basta APENAS UM ser VERDADEIRO para RETORNAR VERDADEIRO)
FALSE || TRUE =  TRUE  (Basta APENAS UM ser VERDADEIRO para RETORNAR VERDADEIRO)
FALSE || FALSE = FALSE  (S√≥ RETORNA FALSE se os DOIS forem FALSE)

var a = 5
var b = 8
¬†
true && false  /* false */
true && true   /* true */
false || false /* false */
true || false  /* false */
true || true   /* true */


//
a  > b && b % 2 == 0 /* false */


¬† (ON)LOAD = "nomeDaFun√ß√£o" - Executa essa fun√ß√£o assim que carrega o site
¬† (ON)CLICK = "nomeDaFun√ß√£o" - Executa essa fun√ß√£o SEMPRE que o usu√°rio CLICAR no BUTTOM

}

FUN√á√ïES:
S√£o A√á√ïES executadas assim que s√£o chamadas ou em decorr√™ncia de algum evento.
Uma fun√ß√£o pode receber par√¢metro e retornar um resultado.



function verificar() {
¬†   var data = new Date()           					// Serve para pegar a DATA atual
¬†   var ano = data.getFullYear()    					// (.getFullYear) Serve para pegar os 4 digitos do ano (2025)

¬†   var fano = window.document.getElementById('txtano') 		// Pega o valor do INPUT pelo ID ('txtano')
¬†   var res = window.document.querySelector('div#res')  		// Pega o valor do INPUT igual CSS ('div#res)

¬†   // Como verificar se o INPUT est√° VAZIO:
¬†   if (fano.value.length == 0 || Number(fano.value) > ano) {           // Serve para verificar se o usu√°rio colocou algum valor

¬†       window.alert('[ERROR] Verifique os dados e tente novamente')    // Mostra um alerta na tela
¬†   } else {

¬†       var fsex = document.getElementsByName('radsex')     		// Serve para pegar o valor do RADIO(n√£o foi preciso selecionar qual[0, 1])
¬†       var idade = ano - Number(fano.value)               		// Serve para fazer a conta da IDADE e guardar na VARI√ÅVEL

¬†       var genero = ''     						// Serve para declarar uma VARI√ÅVEL vazia que vai receber um valor posteriormente

¬†       var img = window.document.createElement('img')      		// 1- Serve para criar o ELEMENTO (IMG) no HTML pelo JS

¬†       img.setAttribute('id', 'foto')                      		// Serve para criar um (ID 'FOTO') no ELEMENTO (IMG) pelo JS


¬†       // ESTRUTURA: (SE), A VARI√ÅVEL (fsex[0]) estiver SELECIONADA, FA√áA ISSO:

¬†       if (fsex[0].checked) {
¬†           genero = 'Homem'
¬†           if (idade < 10) {
¬†               img.setAttribute('src', 'img/bebe.m.png')   		// 2- Serve para mostrar o caminho da IMAGEM
¬†           } else if (idade < 21) {
¬†               img.setAttribute('src', 'img/jovem.m.png')  		// 2- Serve para mostrar o caminho da IMAGEM

¬†           } else if (idade < 50) {
¬†               img.setAttribute('src', 'img/adulto.m.png') 		// 2- Serve para mostrar o caminho da IMAGEM

¬†           } else {
¬†               img.setAttribute('src', 'img/idoso.m.png')  		// 2- Serve para mostrar o caminho da IMAGEM

¬†           }

¬†       // ESTRUTURA: (SE N√ÉO SE), a VARI√ÅVEL (fsex[1]) estiver SELECIONADA, FA√áA ISSO:

¬†       } else if (fsex[1].checked) {
¬†           genero = 'Mulher'               				// VARI√ÅVEL(genero) recebe o VALOR que vai IMPRIMIR na tela
¬†           if (idade < 10) {
¬†               img.setAttribute('src', 'img/bebe.f.png')   		// 2- Serve para mostrar o caminho da IMAGEM

¬†           } else if (idade < 21) {
¬†               img.setAttribute('src', 'img/jovem.f.png')  		// 2- Serve para mostrar o caminho da IMAGEM

¬†           } else if (idade < 50) {
¬†               img.setAttribute('src', 'img/adulto.f.png') 		// 2- Serve para mostrar o caminho da IMAGEM

¬†           } else {
¬†               img.setAttribute('src', 'img/idoso.f.png')  		// 2- Serve para mostrar o caminho da IMAGEM

¬†           }
¬†       }

¬†       res.style.textAlign = 'center'  				// Serve para acessar o ESTILO pela √ÅRVORE DOM e centrar a DIV pelo JS
¬†       res.innerHTML = `Detectamos ${genero} com ${idade} anos.`   	// Sempre que for escrever na tela usar uma (DIV VAZIA) com (".innerHTML")

¬†       res.appendChild(img)    					// 3- Serve para colocar a imagem no HTML
¬†   }

}

------------------------------------------------------- (EX: ANALISADOR DE N√öMERO) --------------------------------------------------



let num = window.document.querySelector('input#num')    			// Serve para pegar o valor do INPUT igual CSS
let lista = window.document.querySelector('select#sel') 			// Serve para pegar o valor do INPUT igual CSS
let res = window.document.querySelector('div#res')      			// Serve para pegar o valor da DIV igual CSS
let valores = []                                        			// Serve para declarar um ARRAY vazio

function isNumero(n) {                                  			// Declara uma fun√ß√£o que recebe (n)
¬†   if (Number(n) >= 1 && Number(n) <= 100) {           			// Se o PAR√ÇMETRO(n) estiver entre 1 e 100 retorne TRUE (SE N√ÉO retorne FALSE)
¬†       return true
¬†   } else {
¬†       return false
¬†   }
}

function inLista(n, l) {                                			// Declara uma fun√ß√£o que recebe (n, l)
¬†   if (l.indexOf(Number(n)) != -1) {                   			// Se na lista o Number de (n) for DIFERENTE de -1 retorne TRUE (SE N√ÉO retorne FALSE)
¬†       return true                                    				// -1 indica que o VALOR n√£o foi encontrado na lista
¬†   } else {
¬†       return false
¬†   }
}

function adicionar() {
¬†   if (isNumero(num.value) && !inLista(num.value, valores)) {  		// VERIFICA√á√ÉO se for um n√∫mero e esse n√∫mero N√ÉO estiver na lista fa√ßa isso:

¬†       valores.push(Number(num.value))                     			// Serve para ADICIONAR o VALOR que o us√∫ario digitar dentro do ARRAY

¬†       let item = document.createElement('option')        		 	// 1- Serve para CRIAR um ELEMENTO no HTML pelo JS
¬†       item.text = `Valor ${num.value} adicionado.`        			// 2- Serve para MODIFICAR esse ELEMENTO criado
¬†       lista.appendChild(item)                             			// 3- Serve para COLOCAR esse ELEMENTO criado
¬†       res.innerHTML = ''                                 		 	// Serve para LIMPAR a DIV que recebe as respostas

¬†   } else {
¬†       window.alert('Valor inv√°lido ou j√° encontrado na lista.')
¬†   }

¬†   num.value = ''  								// Serve para LIMPAR o INPUT
¬†   num.focus()     								// Serve para voltar o FOCO no INPUT
}

function finalizar() {
¬†   if (valores.length == 0) {          					// Verifica se o VETOR est√° vazio

¬†       window.alert('Adicione valores antes de finalizar!')
¬†   } else {
¬†       let tot = valores.length    						// Recebe a QUANTIDADE de valor do ARRAY
¬†       let mais = valores[0]      						// Serve para a VARI√ÅVEL (MAIOR) RECEBER o valor 0 para assim ir recebendo de um em um os outros VALORES
¬†       let menos = valores[0]      						// Serve para a VARI√ÅVEL (MENOR) RECEBER o valor 0 para assim ir recebendo de um em um os outros VALORES
¬†       let soma = 0                						// Vari√°vel recebe o valor 0
¬†       let media = 0               						// Vari√°vel recebe o valor 0
¬†       for(let pos in valores) {   						// Para cada posi√ß√£o em VALORES faz um teste

¬†           soma += valores[pos]        					// Serve para ele simplesmente para cada valor que o ARRAY recebe ele faz uma SOMA

¬†           if (valores[pos] > mais)   					// SE o que est√° dentro do ARRAY(pos est√° recebendo o ARRAY) for MAIOR que a VARI√ÅVEL (MAIOR) (MAIOR recebe 0)
¬†               mais = valores[pos]    					// Ele recebe o (valor que est√° dentro do ARRAY), MAIOR recebe o que est√° dentro da VARI√ÅVEL (VALORES[POS])

¬†           if (valores[pos] < menos)   				// Se o que est√° dentro do ARRAY(pos est√° recebendo o ARRAY) for MENOR que a VARI√ÅVEL (MENOR) (MENOR recebe 0)
¬†               menos = valores[pos]    				// Se o que est√° dentro do ARRAY for MENOR/MAIOR que o VALOR da VARI√ÅVEL (mais/menos) a VARI√ÅVEL guarda esse valor
¬†       }
¬†       media = soma / tot  							// Vari√°vel (media) RECEBE a (soma) divido pelo (tot)
¬†       res.innerHTML = ''  							// Serve para LIMPAR a DIV (res)

¬†       res.innerHTML += `<p>Ao todo, temos ${tot} n√∫meros cadastrados.</p>`
¬†       res.innerHTML += `<p>O maior valor informado foi ${mais}.</p>`
¬†       res.innerHTML += `<p>O menor valor informado foi ${menos}.</p>`
¬†       res.innerHTML += `<p>Somanado todos os valores, temos ${soma}.</p>`
¬†       res.innerHTML += `<p>A m√©dia dos valores digitados √© ${media} </p>`
¬†   }
}
